{
  "expo": {
    "name": "ZynoflixOTT",
    "slug": "zynoflixott",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "zynoflixott",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zynoflix.ott",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to upload photos or videos to ZynoflixOTT.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload photos or videos to ZynoflixOTT.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record videos to upload to ZynoflixOTT."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.zynoflix.ott",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photos to allow you to upload images to ZynoflixOTT.",
          "cameraPermission": "This app needs access to your camera to capture photos for upload to ZynoflixOTT."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}