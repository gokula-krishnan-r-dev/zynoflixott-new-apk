{
  "expo": {
    "name": "ZynoflixOTT",
    "slug": "zynoflixott",
    "version": "1.7.0",
    "orientation": "portrait",
    "backgroundColor": "#2c1157",
    "splash": {
      "image": "./assets/images/appstore.png",
      "resizeMode": "contain",
      "backgroundColor": "#2c1157"
    },
    "icon": "./assets/images/appstore.png",
    "scheme": "zynoflixott",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zynoflix.ott",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to upload photos or videos to ZynoflixOTT.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload photos or videos to ZynoflixOTT.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record videos to upload to ZynoflixOTT."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/appstore.png",
        "backgroundColor": "#2c1157"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.zynoflix.ott",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/appstore.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 180,
          "resizeMode": "contain",
          "backgroundColor": "#2c1157"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photos to allow you to upload images to ZynoflixOTT.",
          "cameraPermission": "This app needs access to your camera to capture photos for upload to ZynoflixOTT."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a5a1c43b-d852-4471-aa56-bbf4e27fa8d3"
      }
    },
    "owner": "56pooja_kumari-5"
  }
}